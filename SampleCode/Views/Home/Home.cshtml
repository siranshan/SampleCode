
@{
    Layout = null;
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
</head>
<body>
    <div class="container" style="margin-top:10%"> 
        <div class="row">
            <div class="col-md-3">
                <label>User Name</label>
                <input type="text" id="txt_UserName" />
            </div>
            </div>
        <div class="row">
            <div class="col-md-3">
                <label>Password</label>
                <input type="password" id="txt_Password" />
            </div>
        </div>
                <div class="row">
                    <input class="btn-primary" value="Submit" onclick="Login()" />
                    <input class="btn-warning" value="Clear" />
                </div>
            </div>

    <script>
        function Login()
        {
            var param = {
                strUserName : $("#txt_UserName").val(),
                strPassword: $("#txt_Password").val(),
            }

            $.ajax({
                type: "POST",
                url: '@Url.Action("SubmitLogin", "Home")',
                contentType: "application/json; charset=utf-8",
                data: JSON.stringify(param),
                dataType: "json",
                async: true,
                success: function (data) {
                    if (data.Status == "01") {
                        alert("success");
                    }
                    else {
                        alert("failure");
                    }
                },
                error: function (e) {
                    alert("Unable to connect remote server");
                }
            });
        }
    </script>
</body>


</html>
